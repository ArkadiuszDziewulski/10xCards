@page "/generate"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using _10xCards.Components.Generate
@using _10xCards.Components.Shared
@using _10xCards.Models

<PageTitle>Generator fiszek</PageTitle>

<h1 class="mb-4">Generator fiszek AI</h1>

<EditForm Model="state">
    <div class="row">
        <div class="col-lg-7">
            <section class="mb-4">
                <h2 class="h5">1. Wklej tekst</h2>
                <SourceInput Text="@state.SourceText"
                             MinLength="MinSourceLength"
                             MaxLength="MaxSourceLength"
                             IsDisabled="state.IsLoading"
                             OnTextChanged="HandleSourceTextChanged" />
            </section>

            <section class="mb-4">
                <h2 class="h5">2. Wygenerowane fiszki</h2>
                <GenerationLoader IsLoading="state.IsLoading" Message="Generowanie fiszek..." />
                <FlashcardReviewList Items="state.Items" OnItemChanged="HandleFlashcardChanged" />
            </section>
        </div>
        <div class="col-lg-5">
            <section class="mb-4">
                <h2 class="h5">3. Wybierz zestaw</h2>
                @if (isDecksLoading)
                {
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="spinner-border spinner-border-sm" role="status">
                            <span class="visually-hidden">£adowanie...</span>
                        </div>
                        <span>£adowanie zestawów...</span>
                    </div>
                }
                <InlineAlert Message="@decksErrorMessage" AlertType="danger" />
                <DeckSelector Selection="deckSelection"
                              Decks="decks"
                              OnSelectionChanged="HandleDeckSelectionChanged" />
            </section>

            <GenerationActions CanGenerate="CanGenerate"
                               CanSave="CanSave"
                               IsBusy="state.IsLoading"
                               OnGenerate="HandleGenerateAsync"
                               OnSave="HandleSaveAsync"
                               OnReset="HandleResetAsync" />

            <div class="mt-3">
                <InlineAlert Message="@state.ErrorMessage" AlertType="danger" />
                <InlineAlert Message="@successMessage" AlertType="success" />
            </div>
        </div>
    </div>
</EditForm>
