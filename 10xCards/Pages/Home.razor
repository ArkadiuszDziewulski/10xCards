@page "/"
@using _10xCards.Models
@using _10xCards.Services
@inject DecksApiClient DecksApiClient
@inject FlashcardsApiClient FlashcardsApiClient

<PageTitle>Home</PageTitle>

<h1>Decks</h1>

<p>Enter a valid Supabase access token to load your decks.</p>

<div class="mb-3">
    <label class="form-label" for="accessToken">Access token</label>
    <input id="accessToken" class="form-control" @bind="accessToken" />
</div>

<button class="btn btn-primary" @onclick="LoadDecksAsync">Load decks</button>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger mt-3">
        @errorMessage
    </div>
}

@if (decks is not null)
{
    <ul class="list-group mt-3">
        @foreach (var deck in decks)
        {
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <strong>@deck.Name</strong>
                        <div class="text-muted">@deck.CreatedAt.ToString("u")</div>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-secondary btn-sm"
                                disabled="@IsLoadingFlashcards(deck.Id)"
                                @onclick="() => LoadFlashcardsAsync(deck.Id)">
                            Load flashcards
                        </button>
                        <button class="btn btn-outline-danger btn-sm"
                                disabled="@IsDeleting(deck.Id)"
                                @onclick="() => DeleteDeckAsync(deck.Id)">
                            Delete
                        </button>
                    </div>
                </div>
                @if (TryGetFlashcards(deck.Id, out var flashcards))
                {
                    <ul class="list-group mt-2">
                        @foreach (var flashcard in flashcards)
                        {
                            <li class="list-group-item">
                                <div><strong>@flashcard.Front</strong></div>
                                <div class="text-muted">@flashcard.Back</div>
                            </li>
                        }
                    </ul>
                }
            </li>
        }
    </ul>
}

@code {
    private string? accessToken;
    private IReadOnlyList<DeckDto>? decks;
    private readonly Dictionary<Guid, IReadOnlyList<FlashcardDto>> flashcardsByDeckId = new();
    private string? errorMessage;
    private readonly HashSet<Guid> deletingDecks = new();
    private readonly HashSet<Guid> loadingFlashcards = new();

    private async Task LoadDecksAsync()
    {
        errorMessage = null;
        decks = null;
        flashcardsByDeckId.Clear();

        if (string.IsNullOrWhiteSpace(accessToken))
        {
            errorMessage = "Access token is required to load decks.";
            return;
        }

        try
        {
            decks = await DecksApiClient.GetDecksAsync(accessToken);
        }
        catch (DecksApiException exception)
        {
            errorMessage = GetDeleteErrorMessage(exception);
        }
        catch (Exception exception)
        {
            errorMessage = $"Unexpected error: {exception.Message}";
        }
    }

    private bool IsDeleting(Guid deckId)
    {
        return deletingDecks.Contains(deckId);
    }

    private bool IsLoadingFlashcards(Guid deckId)
    {
        return loadingFlashcards.Contains(deckId);
    }

    private bool TryGetFlashcards(Guid deckId, out IReadOnlyList<FlashcardDto> flashcards)
    {
        return flashcardsByDeckId.TryGetValue(deckId, out flashcards!);
    }

    private async Task LoadFlashcardsAsync(Guid deckId)
    {
        errorMessage = null;

        if (string.IsNullOrWhiteSpace(accessToken))
        {
            errorMessage = "Access token is required to load flashcards.";
            return;
        }

        if (!loadingFlashcards.Add(deckId))
        {
            return;
        }

        try
        {
            // Cache flashcards per deck to avoid repeated calls for the same selection.
            var flashcards = await FlashcardsApiClient.GetByDeckIdAsync(accessToken, deckId);
            flashcardsByDeckId[deckId] = flashcards;
        }
        catch (FlashcardsApiException exception)
        {
            errorMessage = GetFlashcardsErrorMessage(exception);
        }
        catch (Exception exception)
        {
            errorMessage = $"Unexpected error: {exception.Message}";
        }
        finally
        {
            loadingFlashcards.Remove(deckId);
        }
    }

    private async Task DeleteDeckAsync(Guid deckId)
    {
        errorMessage = null;

        if (string.IsNullOrWhiteSpace(accessToken))
        {
            errorMessage = "Access token is required to delete decks.";
            return;
        }

        if (!deletingDecks.Add(deckId))
        {
            return;
        }

        try
        {
            await DecksApiClient.DeleteDeckAsync(accessToken, deckId);

            if (decks is null)
            {
                return;
            }

            var updatedDecks = decks.Where(deck => deck.Id != deckId).ToList();
            decks = updatedDecks;
        }
        catch (DecksApiException exception)
        {
            errorMessage = exception.Message;
        }
        catch (Exception exception)
        {
            errorMessage = $"Unexpected error: {exception.Message}";
        }
        finally
        {
            deletingDecks.Remove(deckId);
        }
    }

    private static string GetDeleteErrorMessage(DecksApiException exception)
    {
        return exception.StatusCode switch
        {
            System.Net.HttpStatusCode.BadRequest => "Invalid deck identifier.",
            System.Net.HttpStatusCode.Unauthorized => "Access token is missing or invalid.",
            System.Net.HttpStatusCode.Forbidden => "Access to decks is forbidden.",
            System.Net.HttpStatusCode.NotFound => "Deck was not found or you do not have access.",
            _ => exception.Message,
        };
    }

    private static string GetFlashcardsErrorMessage(FlashcardsApiException exception)
    {
        return exception.StatusCode switch
        {
            System.Net.HttpStatusCode.BadRequest => "Invalid deck identifier.",
            System.Net.HttpStatusCode.Unauthorized => "Access token is missing or invalid.",
            System.Net.HttpStatusCode.Forbidden => "Access to flashcards is forbidden.",
            System.Net.HttpStatusCode.NotFound => "No flashcards were found for this deck.",
            _ => exception.Message,
        };
    }
}
