<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
    <div>
        <h1 class="mb-1">@DeckName</h1>
        <div class="text-muted">Zarz¹dzaj fiszkami w tym zestawie</div>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" type="button" @onclick="OnGenerateRequested">
            Generuj fiszki
        </button>
        <button class="btn btn-primary" type="button" @onclick="OnCreateRequested">
            Dodaj fiszkê
        </button>
    </div>
</div>

@code {
    [Parameter]
    public string DeckName { get; set; } = string.Empty;

    [Parameter]
    public EventCallback OnCreateRequested { get; set; }

    [Parameter]
    public EventCallback OnGenerateRequested { get; set; }
}
