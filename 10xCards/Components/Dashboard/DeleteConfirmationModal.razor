@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" aria-label="Zamknij" @onclick="HandleCancel"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">@Message</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" @onclick="HandleCancel">Anuluj</button>
                    <button type="button" class="btn btn-danger" @onclick="HandleConfirm">Usuñ</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public string Title { get; set; } = "Usuñ zestaw";

    [Parameter]
    public string Message { get; set; } = "Czy na pewno chcesz usun¹æ ten zestaw?";

    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public EventCallback OnConfirm { get; set; }

    [Parameter]
    public bool IsBusy { get; set; }

    private async Task HandleCancel()
    {
        if (!OnCancel.HasDelegate)
        {
            return;
        }

        await OnCancel.InvokeAsync();
    }

    private async Task HandleConfirm()
    {
        if (!OnConfirm.HasDelegate)
        {
            return;
        }

        await OnConfirm.InvokeAsync();
    }
}
