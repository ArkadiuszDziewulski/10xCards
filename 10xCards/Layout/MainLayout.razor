@inherits LayoutComponentBase
@implements IDisposable
@inject SupabaseAuthService SupabaseAuthService
@inject UserSessionState UserSessionState
@inject NavigationManager NavigationManager
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex align-items-center">
            <div class="ms-auto">
                @if (isSessionVerified)
                {
                    <UserMenu IsAuthenticated="UserSessionState.IsAuthenticated"
                              UserEmail="@UserSessionState.UserEmail"
                              OnLogout="HandleLogout" />
                }
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool isSessionVerified;

    protected override async Task OnInitializedAsync()
    {
        UserSessionState.OnChange += HandleSessionChanged;
        await VerifySessionAsync();
    }

    private async Task HandleLogout()
    {
        if (!UserSessionState.IsAuthenticated)
        {
            return;
        }

        var result = await SupabaseAuthService.SignOutAsync();
        if (!result.IsSuccess)
        {
            return;
        }

        NavigationManager.NavigateTo("/auth/login");
    }

    private void HandleSessionChanged()
    {
        if (isSessionVerified && !UserSessionState.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/auth/login");
        }

        _ = InvokeAsync(StateHasChanged);
    }

    private async Task VerifySessionAsync()
    {
        await SupabaseAuthService.EnsureInitializedAsync();
        isSessionVerified = true;

        if (!UserSessionState.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/auth/login");
        }
    }

    public void Dispose()
    {
        UserSessionState.OnChange -= HandleSessionChanged;
    }
}
