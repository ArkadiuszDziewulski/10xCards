<div class="d-flex align-items-center gap-3">
    @if (IsAuthenticated)
    {
        <span class="text-muted">@UserEmail</span>
        <button class="btn btn-outline-secondary btn-sm" type="button" @onclick="OnLogout">Wyloguj</button>
    }
    else
    {
        <NavLink class="btn btn-outline-primary btn-sm" href="/auth/login">Zaloguj siê</NavLink>
    }
</div>

@code {
    [Parameter] public bool IsAuthenticated { get; set; }
    [Parameter] public string? UserEmail { get; set; }
    [Parameter] public EventCallback OnLogout { get; set; }
}
